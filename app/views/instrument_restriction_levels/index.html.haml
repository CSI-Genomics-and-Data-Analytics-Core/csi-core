= render :partial => "headers"

%h3 #{InstrumentRestrictionLevel.model_name.human}

%p= link_to "Add #{InstrumentRestrictionLevel.model_name.human}", new_facility_instrument_instrument_restriction_level_path(@facility, @instrument)

%table
  %tr
    %th
    %th #{InstrumentRestrictionLevel.human_attribute_name(:name)}
    %th #{User.model_name.human.pluralize}
  - @instrument_restriction_levels.each do |level|
    %tr
      %td= link_to "Remove", facility_instrument_instrument_restriction_level_path(@facility, @instrument, level), :method => :delete, :confirm => 'Are you sure?'
      %td= link_to level.name, edit_facility_instrument_instrument_restriction_level_path(@facility, @instrument, level)
      %td= level.users.size


