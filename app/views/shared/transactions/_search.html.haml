= form_tag url_for(params), :method => :get, :class => "search_form" do
  %fieldset#search
    %ul
      - unless @account
        = chosen_field(:accounts, Account.model_name.human, "id", "account_list_item")
      - unless @facility
        = chosen_field(:facilities, Facility.model_name.human)
      = chosen_field(:products, Product.model_name.human, nil, nil, product_options(@products, @search_fields[:products]))
      = chosen_field(:account_owners, Account.human_attribute_name('owner'), "id", "full_name")

      -# %li
        -# = label_tag :owners, Account.human_attribute_name('owner').pluralize
        -# = select_tag :owners, options_from_collection_for_select(@account_owners, "id", "full_name", @search_fields[:owners]), {:multiple => true, :"data-placeholder" => "Select #{Account.human_attribute_name('owner').pluralize.downcase}"}.merge(@account_owners.size > 1 ? {} : {:disabled => :disabled})
  %fieldset#calendar_filter
    %ul
      %li
        = label_tag :start_date, "Start Date"
        = text_field_tag :start_date, (@search_fields[:start_date] || "").gsub("-","/"), :class => 'datepicker'
      %li
        = label_tag :end_date, "End Date"
        = text_field_tag :end_date, (@search_fields[:end_date] || "").gsub("-","/"), :class => 'datepicker'

  = submit_tag "Search"
%div{:style=>"clear:both"}
