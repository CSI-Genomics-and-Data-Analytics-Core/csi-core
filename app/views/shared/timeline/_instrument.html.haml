.timeline_instrument
  %h4= instrument
  -# Add .reschedulable to enable drag/drop
  .timeline
    .unit_container
      = render :partial => "shared/timeline/reservation", :collection => (instrument.reservations.for_date(@display_date).order(:reserve_start_at) + ScheduleRule.unavailable_for_date(instrument, @display_date)), :as => :reservation
      - if @display_date.beginning_of_day == Time.zone.now.beginning_of_day
        .current_time{:style => "left: #{datetime_left_position(Time.zone.now)}"}
    .relay_checkbox
      = check_box_tag "relay[#{instrument.id}]", 1, false