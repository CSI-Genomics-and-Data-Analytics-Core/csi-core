- content_for :tabnav do
  = render :partial => 'shared/tabnav_account', :locals => {:secondary_tab => 'statements'}
- content_for :h1 do
  == Payment Source Transactions

%h2=h @account
%h3== Statements for #{h @facility}


- if @statements.empty?
  %p.notice No statements exist.
- else
  %ul.grid_5
    - @statements.each do |statement|
    - desc=statement.finalized_at ? human_date(statement.finalized_at) : human_date(statement.invoiced_at).to_s + ' (invoiced only)'
      %li= link_to desc, account_facility_statement_path(@account, @facility, statement, :format => :pdf)

  %p= will_paginate(@statements)

