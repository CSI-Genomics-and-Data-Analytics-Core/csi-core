.modal-header
  = modal_close_button
  %h3= @order_detail.product
= form_for @order_detail, :url => manage_facility_order_order_detail_path(current_facility, @order, @order_detail) do |f|
  .modal-body
    = f.label :account
    = f.collection_select :account_id, @available_accounts, :id, :account_pretty

    = f.label :order_status
    - if @order_statuses
      = f.collection_select :order_status_id, @order_statuses, :id, :name_with_level
    - else
      = @order_detail.order_status

    - if @order_detail.reservation
      = render :partial => 'reservation', :locals => { :f => f, :reservation => @order_detail.reservation }
    - else
      = f.label :quantity
      = f.text_field :quantity

    = render :partial => 'costs', :locals => { :f => f }

    = render :partial => 'assigned_user', :locals => { :f => f }

    = f.label :note
    = f.text_area :note

  .modal-footer
    = modal_cancel_button