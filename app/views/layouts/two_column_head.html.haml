<!DOCTYPE html>
%html
  %head
    %meta{ "http-equiv" => "content-type", "content" => "text/html; charset=UTF-8" }
    = render :partial => '/shared/title', :locals => { :title =>  yield(:h1) }
    = render :partial => '/shared/head'
    = yield :head_content
    = render :partial => '/shared/google'
  %body
    #header
      = render :partial => '/shared/header'
    #nav
      = render :partial => '/shared/nav'
    #content
      .container_12
        .clean
        .grid_12 
          %h1= yield :h1
          %h2= yield :h2
        .grid_12#header_billing
          .grid_3.alpha
            #sidebar
              = yield :sidebar
          .grid_9.omega
            - if flash[:error]
              %p.error= flash[:error]
            - if flash[:notice]
              %p.notice= flash[:notice]
            - if flash[:info]
              %p.info= flash[:info]
            = yield :tabnav
        .clear
        .grid_12
          = yield
        .clear
    #footer
      .container_12
        = render :partial => '/shared/footer'
