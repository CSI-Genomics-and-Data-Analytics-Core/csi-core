= content_for :h1 do
  =h current_facility

= content_for :sidebar do
  = render :partial => 'admin/shared/sidenav_users', :locals => { :sidenav_tab => 'users' }

= content_for :tabnav do
  = render :partial => 'admin/shared/tabnav_users', :locals => { :secondary_tab => 'instruments' }

%h1 #{@user.full_name} Access List
- if @instruments.blank?
  %p.notice #{@user.full_name} does not have any available instruments.
- else
  = form_for :user, url: facility_user_instruments_approvals_path(@facility, @user) do |form|
    %table.table.table-striped.table-hover
      %thead
        %tr
          %th.approval-column= t('.th.approval_received')
          %th= t('.th.instrument_name')
      %tbody
        - @instruments.each do |instrument|
          %tr
            %td.approval-checkbox
              = check_box_tag "approved_instruments[]", instrument.id, instrument.is_approved_for?(@user)
            %td= link_to instrument, facility_instrument_users_path(instrument.facility,instrument)
    = submit_tag t('.update_approvals.submit'), class: ['btn', 'btn-primary']
