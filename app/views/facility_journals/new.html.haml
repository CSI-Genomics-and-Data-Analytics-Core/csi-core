= content_for :head_content do
  %script{:type => 'text/javascript', :src => "#{request.protocol}ajax.googleapis.com/ajax/libs/jqueryui/1.8.1/jquery-ui.min.js"}
  = stylesheet_link_tag 'jquery-ui/jquery-ui'
  :javascript
    $(function(){
      $(".datepicker").datepicker({
        'defaultDate':'#{@soonest_journal_date.strftime("%m/%d/%y")}',
        'minDate':'#{@soonest_journal_date.strftime("%m/%d/%y")}',
        'maxDate':'#{Time.zone.now.to_datetime.strftime("%m/%d/%y")}'
      });
    });

= render :partial => "shared/transactions/headers"
= content_for :h1 do
  = @facility
= content_for :h2 do
  %h2 Create Journal

= content_for :top_block do      
  = render :partial => 'shared/transactions/top', :locals => { :tab => 'new_journal' }
  
- if @order_details.empty?
  %p.notice There are no orders to be journaled at this time.
- else
  = content_for :action_instructions do
    %p
      Select the orders that you wish to journal. Only one journal may be pending at a time. Please note that selected orders may not span multiple fiscal years.
    - unless @pending_journal.nil?
      %p.notice You may not generate a new journal until the pending journal is closed.
  = render :partial => 'shared/transactions/table'
  = render :partial => 'shared/reconcile_footnote'
