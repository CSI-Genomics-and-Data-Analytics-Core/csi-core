- @order.order_details.each { |od| od.send(:extend, PriceDisplayment) }

%p= t('.intro')

%ul
  %li
    %label Ordered at
    =h @order.ordered_at.strftime("%b %e, %Y %l:%M %p")
  %li
    %label Facility
    =h @order.facility
  %li
    %label Ordered By
    =h "#{@order.created_by_user.full_name}"

%table
  %tr
    %th Order #
    %th Product
    %th Quantity
    %th Status
    - text = @order.order_details.to_a.find { |od| od.display_cost_class != 'unassigned' }.display_cost_class.humanize
    %th= "#{text} Price"
    %th= "#{text} Adjustment"
    %th= "#{text} Total"
  - @order.order_details.each do |od|
    - od.send(:extend, PriceDisplayment)
    %tr
      %td= od
      - if od.reservation
        %td
          = ((od.bundle ? "#{h od.bundle} &mdash; " : '') + h(od.product)).html_safe
          %br
          =h od.reservation
      - else
        %td= ((od.bundle ? "#{h od.bundle} &mdash; " : '') + h(od.product)).html_safe
      %td=h od.quantity
      %td=h od.order_status.name
      %td= od.display_cost
      %td= od.display_subsidy
      %td= od.display_total

%p= t('.outro') if @order.any_details_estimated?
