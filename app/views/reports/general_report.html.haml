= content_for :head_content do
  = stylesheet_link_tag 'reports'
  = render :partial => 'report_head'
  :javascript
    $(function() {
      $('#tabs').tabs({
        selected: #{@selected_index},
        ajaxOptions: {
          error: function(xhr, status, error) {
                    $('#error-msg').html('Sorry, but the tab could not load. Please try again soon.').show();
                  }
        }
      });
    });

= content_for :h1 do
  =h current_facility

%p.error#error-msg
= form_tag request.fullpath, :id => 'refresh-form'  do
  %ul.options
    %li= image_submit_tag 'icon-refresh.png', :id => 'refresh-ico'
    %li
      %label Start Date
      = text_field_tag :date_start, params[:date_start] || human_datetime(@date_start, :date_only => true), :class => 'datepicker'
    %li
      %label End Date
      = text_field_tag :date_end, params[:date_end] || human_datetime(@date_end, :date_only => true), :class => 'datepicker'
    %li
      %label Order Status
      = select_tag 'filter', options_for_select(OrderStatus.all.collect(&:name), OrderStatus.complete.first.name)

  %div#tabs
    %ul
      %li
        %a{:href => product_facility_reports_path } Product
      %li
        %a{:href => account_facility_reports_path } Account
      %li
        %a{:href => account_owner_facility_reports_path } Account Owner
      %li
        %a{:href => purchaser_facility_reports_path } Purchaser
      %li
        %a{:href => price_group_facility_reports_path } Price Group




